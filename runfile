import json
import random

# Äá»c dá»¯ liá»‡u tá»« file JSON
with open("flashcards.json", "r", encoding="utf-8") as file:
    data = json.load(file)

# Gom táº¥t cáº£ tá»« vá»±ng láº¡i thÃ nh danh sÃ¡ch
flashcards = []
for category in data:
    for word in category["words"]:
        flashcards.append(word)

# XÃ¡o trá»™n flashcard Ä‘á»ƒ hiá»ƒn thá»‹ ngáº«u nhiÃªn
random.shuffle(flashcards)

# Cháº¡y flashcard trÃªn terminal
for card in flashcards:
    input(f"\nTá»«: {card['word']} (Nháº¥n Enter Ä‘á»ƒ xem nghÄ©a)")
    print(f"ğŸ‘‰ NghÄ©a: {card['meaning']}")

print("\nHoÃ n thÃ nh! ğŸ‰")


